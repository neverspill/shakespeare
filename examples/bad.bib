keywords = {Carbohydrates,Carbohydrates: chemistry,Chemistry, Organic,Polymers},
month = jul,
number = {7},
pages = {a003467},
pmid = {20504964},
title = {{Planetary organic chemistry and the origins of biomolecules.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2890202\&tool=pmcentrez\&rendertype=abstract},
volume = {2},
year = {2010}
}
