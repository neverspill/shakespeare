issn = {1520-5126},
journal = {Journal of the American Chemical Society},
month = feb,
number = {7},
pages = {2858--65},
pmid = {24499340},
title = {{The free energy landscape of pseudorotation in 3'-5' and 2'-5' linked nucleic acids.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3982932\&tool=pmcentrez\&rendertype=abstract},
volume = {136},
